{% macro paginationDisplay(pagination, page) %}
  <nav class="pagination">
    <ol>
      {% if page.url != pagination.href.first %}
        <li>
          <a href="{{ pagination.href.first }}">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="icon icon-tabler icon-tabler-chevrons-left"
              width="44"
              height="44"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="black"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round">
              <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
              <polyline points="11 7 6 12 11 17"/>
              <polyline points="17 7 12 12 17 17"/>
            </svg>
          </a>
        </li>
      {% endif %}
        {% if pagination.previousPageHref %}
        <li>
          <a href="{{ pagination.href.previous }}">
            {{pagination.pageNumber }} 
          </a>
        </li>
      {% endif %}
        <li class="current">
          {{pagination.pageNumber + 1}}
        </li>
        {% if pagination.nextPageHref %}
        <li>
          <a href="{{ pagination.nextPageHref }}">
            {{pagination.pageNumber + 2}}
          </a>
        </li>
      {% endif %}
      {% if page.url != pagination.href.last %}
        <li>
          <a href="{{ pagination.href.last }}">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="icon icon-tabler icon-tabler-chevrons-right"
              width="44"
              height="44"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="black"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round">
              <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
              <polyline points="7 7 12 12 7 17"/>
              <polyline points="13 7 18 12 13 17"/>
            </svg>
          </a>
        </li>
      {% endif %}
    </ol>
  </nav>
{% endmacro %}
