---
layout: layouts/main.njk
pagination:
    data: posts
    size: 1
    alias: post
permalink: "articles/{{ post.slug }}/"
eleventyComputed:
    title: "{{post.title}}"
    description: "{{post.description}}"
    image: "{{post.thumbnail}}"
---
<article class="article">
  <h1 class="h1 gradient-text">{{post.title}}</h1>

  <div class="article__infos">
    <time>{{post.date_created | parseDateToFrench}}</time>
    <a href="/categories/{{post.category.slug}}/" data-category="{{post.category.id}}">{{post.category.name}}</a>
 
  </div>
  <div class="markdown">
    {{post.content | markdown | safe}}
  </div>
     <div class="article__tags">
      {% for tag in post.tags %}
      <a class="article__tag" href="/tags/{{tag.tags_id.slug}}/">#{{tag.tags_id.title}}</a>
      {% endfor %}
    </div>
</article>